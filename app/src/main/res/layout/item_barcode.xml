<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/brand_white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Main content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Code -->
            <TextView
                android:id="@+id/barcodeCodeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/brand_blue"
                tools:text="ABC123456789" />

            <!-- Comment -->
            <TextView
                android:id="@+id/barcodeCommentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/brand_cyan"
                android:visibility="gone"
                tools:text="ðŸ’¬ ÐšÐ¾Ð¼Ð¼ÐµÐ½Ñ‚Ð°Ñ€Ð¸Ð¹ Ðº ÐºÐ¾Ð´Ñƒ"
                tools:visibility="visible" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/barcodeTimestampTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:alpha="0.7"
                android:textSize="12sp"
                android:textColor="@color/md_theme_light_onSurfaceVariant"
                tools:text="22.07.2025 14:30:25" />

        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Edit comment -->
            <ImageView
                android:id="@+id/editCommentIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Ð ÐµÐ´Ð°ÐºÑ‚Ð¸Ñ€Ð¾Ð²Ð°Ñ‚ÑŒ ÐºÐ¾Ð¼Ð¼ÐµÐ½Ñ‚Ð°Ñ€Ð¸Ð¹"
                android:focusable="true"
                android:padding="6dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/brand_cyan" />

            <!-- Generate barcode -->
            <ImageView
                android:id="@+id/generateCode128Icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/generate_barcode"
                android:focusable="true"
                android:padding="6dp"
                android:src="@drawable/ic_barcode_generator"
                app:tint="@color/brand_blue" />

            <!-- Delete -->
            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/delete"
                android:focusable="true"
                android:padding="6dp"
                android:src="@drawable/ic_delete"
                app:tint="@color/md_theme_light_error" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>